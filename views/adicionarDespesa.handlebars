    <main>
        <form class="form" action="/adicionaDespesa" method="post">
            <div class="divQuantia">
                <label for="quantia">R$ </label>
                <input required type="text" name="quantia" id="quantia" placeholder="00.00">
            </div>
            <p class="categoria">Categorias</p>
            <div class="categoriasDiv">
                <div class="categoria">
                    <input required type="radio" id="saude" name="categoria" value="saude">
                    <label class="label" for="saude"><i class='icons bx bxs-capsule'
                            style='color:#ff0000'></i>Saúde</label>
                </div>
                <div class="categoria">
                    <input required type="radio" id="lazer" name="categoria" value="lazer">
                    <label class="label" for="lazer"><i class='icons bx bx-joystick'
                            style='color:#27ff00'></i>Lazer</label>
                </div>
                <div class="categoria">
                    <input required type="radio" id="casa" name="categoria" value="casa">
                    <label class="label" for="casa"><i class='icons bx bx-home' style='color:#00cfff'></i>Casa</label>
                </div>
                <div class="categoria">
                    <input required type="radio" id="comida" name="categoria" value="comida">
                    <label class="label" for="comida"><i class='icons bx bxs-baguette'
                            style='color:#ffe900'></i>Comida</label>
                </div>
                <div class="categoria">
                    <input required type="radio" id="compras" name="categoria" value="compras">
                    <label  class="label" for="compras"><i class='icons bx bx-store-alt'
                            style='color:#1f06de'></i>Compras</label>
                </div>
                <div class="categoria">
                    <input type="radio" id="outros" name="categoria" value="outros">
                    <label required class="label" for="outros"><i class='icons bx bx-plus-medical' undefined></i>Outros</label>
                </div>
            </div>
            <div class="descricaoDiv">
                <label for="descricao">Descrição</label>
                <input required class="descricaoInput" type="text" name="descricao" id="descricao">
            </div>
            <div class="centerBtn btnAdicionarDespesa">
                <button required class="btnAdicionar" type="submit">Adicionar</button>

            </div>
        </form>
    </main>






</section>