<section class="container">
    <div class="cabecalho">

        <nav class="navUser">
            <p>Marcio Jose</p>
            <a class="btnSair" href="#">sair</a>
        </nav>
        <nav class="menuNavegacao">
            <a href="receita" class="nav ">
                <i class='bxiconsCabecalho bx bxs-dollar-circle' style='color:#7dff00'></i>
                <div>
                    <p>Receita</p>
                    <span class="spanReceita">R$ 574.85</span>
                </div>
            </a>
            <a href="/" class="nav active">
                <i class='bxiconsCabecalho bx bxs-down-arrow-circle' style='color:#ff0000'></i>
